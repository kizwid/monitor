<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
	    http://www.springframework.org/schema/beans     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		">

    <import resource="classpath:shared/jdbc.spring.xml" />

    <bean id="databaseReleaseDao" class="kizwid.shared.dao.DatabaseReleaseDaoImpl">
        <constructor-arg ref="jdbcTemplate"/>
    </bean>

    <bean id="sqlLoader" class="kizwid.shared.database.release.SqlLoader">
        <constructor-arg ref="databaseReleaseDao"/>
        <constructor-arg ref="jdbcTemplate"/>
        <constructor-arg value="database/${jdbc.dialect}"/>
    </bean>

</beans>
