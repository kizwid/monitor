<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
       default-autowire="byName">

    <bean id="common.properties" class="kizwid.shared.util.EncryptedPropertyPlaceholderConfigurer">
        <!-- Allow override of properties from the commandline for emergency overrides. SYSTEM_PROPERTIES_MODE_OVERRIDE/SYSTEM_PROPERTIES_MODE_FALLBACK-->
        <property name="systemPropertiesModeName" value="SYSTEM_PROPERTIES_MODE_FALLBACK"/>
        <property name="locations">
            <list>
                <value>classpath:properties/monitorApp.default.properties</value>
                <value>classpath:properties/monitorApp.dev.properties</value>
            </list>
        </property>
    </bean>

</beans>
